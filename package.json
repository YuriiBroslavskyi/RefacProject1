{
  "name": "mandarin-store",
  "version": "1.0.0",
  "description": "Сайт продажу мандаринів – original + refactored",
  "main": "original/app.js",
  "scripts": {
    "start:original": "node original/app.js",
    "start:refactored": "node refactored/src/app.js",
    "test:original": "set \"IMPL=original\"&& jest tests/common",
    "test:refactored": "set \"IMPL=refactored/src\"&& jest tests/common",
    "test": "npm run test:original && npm run test:refactored"
  },
  "dependencies": {
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-session": "^1.17.3"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "supertest": "^6.3.4"
  }
}